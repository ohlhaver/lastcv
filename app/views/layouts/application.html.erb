<!DOCTYPE html>
<html>
<head>
  <title>TapCV</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag :defaults, "nested_form" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div>
  <% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %> fade in">
      <a href="#" data-dismiss="alert" class="close">×</a>
      <%= value %>
    </div>
  <% end %>
</div>
	<div class="container">
		<div class="row">
  			<div class="span2">
          <h2><%= link_to "TapCV", root_path %></h2>
        </div>
        <div class="span6">  
          <br>
          
          <% if current_candidate %>
            Signed in as <strong><%= current_candidate.name %></strong>
            | <%= link_to "Sign out", signout_path, id: "sign_out" %>
            <% if current_candidate.profile %>
              | <%= link_to 'Edit your CV', edit_profile_path(current_candidate.profile) %> | 
              <%= link_to 'View', current_candidate.profile %>
              <%else%>
              | <%= link_to 'Post your CV', new_profile_path %>
            <%end%>
          <% elsif current_user %>
             Logged in as <strong><%= current_user.email %></strong>.
              <%= link_to "Log Out", logout_path %> | 
              <%= link_to "Settings", edit_user_path(current_user) %>
          <% else %>
          Candidates: <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %> |
          Companies:
              <%= link_to "Sign Up", signup_path %> or
              <%= link_to "Log In", login_path %>
            <% end %>
            <br><br>
        </div>
        <div class="span12">
    				<%= yield %>
  			</div>
        <footer>
        <div class="span12">
          <br><br>
          TapCV © 2013
          <br><br>
        </div>
        </footer>
 		</div>
	</div>





</body>
</html>
