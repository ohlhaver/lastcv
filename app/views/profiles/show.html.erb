<% if current_user && find_invitation(@profile) %>

		<% if find_invitation(@profile).approval %>
			<b>Congratulations! This candidate gave you access to her/his contact details at <%= find_invitation(@profile).approval.created_at.to_s %></b>
			<br><br>
			<%= render "profiles/details" %><br><br>
		<%else%>
		<b>You requested contact details from this candidate at <%= find_invitation(@profile).created_at.to_s %></b>
		<%end%>
<%else%>
		<%= button_to "Request contact details from this candidate", :id => @profile.id, :action => "confirm"  %>
<% end %>

<%= render "full_profile" %>
<br>


