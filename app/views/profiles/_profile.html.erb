<tr onclick="location.href='<%=profile_path(profile)%>';" style="cursor:pointer" title="Click to view full profile">
	<td>
		<%= profile.highest_position.name if profile.highest_position %>
	</td>

	<td>
	
		<%= profile.platforms.map(&:name).join(", ") %>
	</td>
	<td>
		<%= profile.ios_years %> years
	</td>
	<td>
		<%= profile.ios_apps %> apps
	</td>		
	<td>
		<%= display_education_level(profile.education_level) %>
	</td>
	<td>
		<%= "yes" if profile.silicon_valley == true %>
	</td>	
	<td>
		<%= status(profile) %>
	</td>
  </tr>








