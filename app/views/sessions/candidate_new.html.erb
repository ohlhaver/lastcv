<h3>Candidate Log In</h3>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <p><%= link_to "forgotten password?", candidate_new_password_reset_path %></p>
<div class="field" >
  <label class="checkbox">
  <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  <%= label_tag :remember_me %>
</label>
</div>
<br>
<%= hidden_field_tag "login_type", "candidate" %>
  <div class="actions"><%= submit_tag "Log In",:class => "btn btn-medium btn-primary" %></div>
<% end %>

<b><%= link_to "Sign up here", candidate_signup_path %></b>