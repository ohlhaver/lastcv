<h3>Company Log In</h3>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <p><%= link_to "forgotten password?", new_password_reset_path %></p>
<br>
  <div class="actions"><%= submit_tag "Log In",:class => "btn btn-medium btn-primary" %></div>
<% end %>

<b><%= link_to "Sign up here", signup_path %></b>