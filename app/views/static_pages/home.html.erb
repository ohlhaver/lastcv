<% if current_candidate %>
	<% if current_candidate.invitations.any? %>
	<div class="row">
		<div class ="span6">
			<h4>Contact requests for you</h4><br>
			<table class="table table-striped table-hover">
		    	<tbody>
					<%= render current_candidate.invitations %>
				</tbody>
			</table>
		</div>
	</div>
	<% else %>
		<% if current_candidate.profile %>
			<h4>You don't have any requests yet.</h4>
			<br>
    <%= link_to 'Update your TapCV', edit_profile_path(current_candidate.profile), 
                                class: "btn btn-large btn-primary" %>
		<%else%>
		<div class="center hero-unit">
		
     <h1>
      Create your anonymous TapCV</h1> <h2> You are in control over who sees your contact details:<br> Only people whose request you explicitly approve will see your identity. </h2>
    
    <br>
    <%= link_to 'Create my TapCV', new_profile_path, 
                                class: "btn btn-large btn-primary" %>

  </div>

		<%end%>

	<% end %>
<% end %>

<% if current_user %>
	<% if @approved_invitations.any? %>
	<h4>Your received contact details</h4>
	<% @invitations = @approved_invitations %>
		<%= render "profiles/accepted_invitations_table" %>
		<br>
	<% end %> 

	<% if @open_invitations.any? %>
	<h4>Your open requests</h4>
	<% @invitations = @open_invitations %>
		<%= render "profiles/invitations_table" %>
	<% end %>
	<br>
<% end %>

<% unless current_candidate %>
	<% unless current_user %>
	<div class="center hero-unit">
		<h1>Jobseekers:</h1>
     <h2>
      Create your anonymous TapCV in 30 seconds<br> and get contacted by recruiters!
    </h2>
    <br>
    <%= link_to "Login anonymously via Facebook*!", "/auth/facebook", id: "sign_in", 
                                class: "btn btn-large btn-primary" %>

<br>
  *None of your actions here will ever be visible on Facebook
  </div>
  <%end%>
	<%= render "profiles/filter_table"%>	
<% end %>


